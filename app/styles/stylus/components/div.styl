div
  &.headerButtons
    position absolute 
    right 30px
    margin-top 35px 
    display inline-block
    font-family core_font
    color light_blue

    a
      color light_blue

  &.onePageForms
    position absolute
    top 50%
    left 50%
    padding 10px
    background-color light_blue

    &.signupForm
      width w = 500px
      height h =  600px
      margin-left -(w/2)
      margin-top -(h/2)
      border-radius 5px
      box-sizing border-box

    &.signinForm
      width w = 500px
      height h = 350px
      margin-left -(w/2)
      margin-top -(h/2)
      border-radius 5px
      box-sizing border-size  

  &.popup
    position fixed
    boxW = 600px
    boxH = 700px
    top 'calc(50% - %s / 2)' % boxH
    left 'calc(50% - %s / 2)' % boxW
    width boxW
    height boxH
    padding 10px
    box-sizing border-box
    border-radius 5px
    background-color dark_blue
    opacity 0
    transition opacity 0.3s ease-in
    will-change opacity
    z-index -1

    &.show
      opacity 1
      z-index 98

      .close
        z-index 99
        cursor pointer
  
  &.taskList
    position absolute 
    top 20%
    left 40%

    .task
      margin-bottom 30px
      background-color #eee
      border-radius 5px
      padding 10px 50px